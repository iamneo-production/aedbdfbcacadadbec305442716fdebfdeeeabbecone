@model IEnumerable<BookStoreApp.Models.Option>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Option Id</th>
                <th>Loan Type</th>
                <th>Description</th>
                <th>Interest Rate</th>
                <th>Maximum Amount</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Option option in Model)
            {
                <tr>
                    <td>@option.OptionID</td>
                    <td>@option.LoanType</td>
                    <td>@option.Description</td>
                    <td>@option.InterestRate</td>
                     <td>@option.MaximumAmount</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@option.OptionID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No Options found.</p>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">