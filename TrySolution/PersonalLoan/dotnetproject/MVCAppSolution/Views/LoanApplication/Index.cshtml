@model IEnumerable<BookStoreApp.Models.LoanApplication>

@{
    ViewData["Title"] = "Index";
}

@if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>LoanApplication Id</th>
                <th>Loan Applicant Name</th>
                <th>Requested Amount</th>
                <th>Submission Date</th>
                <th>Loan Type</th>
                <th>Employment Status</th>
                <th>Income</th>
                <th>Credit Score</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (LoanApplication loanApplication in Model)
            {
                <tr>
                    <td>@loanApplication.LoanApplicationID</td>
                    <td>@loanApplication.Name</td>
                    <td>@loanApplication.RequestedAmount</td>
                    <td>@loanApplication.SubmissionDate.Date.ToString("dd-MM-yyyy")</td>
                    <td>@loanApplication.LoanType</td>
                    <td>@loanApplication.EmploymentStatus</td>
                    <td>@loanApplication.Income</td>
                    <td>@loanApplication.CreditScore</td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@loanApplication.LoanApplicationID" method="post">
                            <button type="submit" class="btn btn-sm btn-danger">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No LoanApplications found.</p>
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">